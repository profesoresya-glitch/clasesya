    <div id="contenido" class="perfil">Cargando informaci√≥n del profesor...</div>

    <script>
        const URL_API = "https://script.google.com/macros/s/AKfycbw4P4VylmH_RimZpQvRNp58Zw1LaAmKby84R_A0u__u3le2LfLLx6cpK6q6V_1TUtbI/exec";
        const id = new URLSearchParams(window.location.search).get("id");

        fetch(`${URL_API}?id=${id}`)
        .then(r => r.json())
        .then(p => {
            if (!p) {
                document.getElementById("contenido").innerHTML = "<h2>Profesor no encontrado</h2><a href='index.html'>Volver al listado</a>";
                return;
            }
            document.getElementById("contenido").innerHTML = `
                <h1>${p.nombre} ${p.apellido}</h1>
                <div class="titulo">${p.titulo}</div>
                <p><strong>üìç Ubicaci√≥n:</strong> ${p.ciudad} (${p.tipo})</p>
                <hr>
                <div class="descripcion">${p.descripcion}</div>
                <div class="contacto-box">
                    <strong>üìß ¬øQuer√©s tomar clases? Contactalo aqu√≠:</strong><br>
                    <a href="mailto:${p.contacto}">${p.contacto}</a>
                </div>
                <a href="index.html" class="boton-volver">‚¨Ö Volver al listado</a>
            `;
        })
        .catch(err => document.getElementById("contenido").innerHTML = "Error al conectar con el servidor.");
    </script>
