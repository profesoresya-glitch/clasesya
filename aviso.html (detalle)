<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Aviso</title>
</head>
<body>
<div id="aviso"></div>

<script>
const id = new URLSearchParams(window.location.search).get("id");

fetch(`TU_URL_WEB_APP/exec?id=${id}`)
  .then(r => r.json())
  .then(p => {
    document.getElementById("aviso").innerHTML = `
      <h2>${p.nombre} ${p.apellido}</h2>
      <p>${p.titulo}</p>
      <p>${p.descripcion}</p>
      <p><strong>Contacto:</strong> ${p.contacto}</p>
    `;
  });
</script>
</body>
</html>
